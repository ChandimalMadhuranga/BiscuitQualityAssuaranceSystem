@model IEnumerable<BiscuitQualityAssuaranceSystem.Models.User>

@{
    ViewBag.Title = "Index";
}


<table class="table table-hover">
    <tr><br /><br />
        <h2>User Home</h2>
    </tr><br /><br />
               <tr>
                   <th>
                       @Html.DisplayNameFor(model => model.User_Employee_ID)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.User_Roles.User_Role_Type)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.User_Name)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.User_F_Name)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.User_L_Name)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.User_Email)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.User_Mob_Number)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.User_Registration_Date)
                   </th>

                   <th>
                       <div class="row">
                           <button type="button" class="btn btn-info btn-lg" onclick="location.href='@Url.Action("Create", "UserRegistration")'">
                               <span class="glyphicon glyphicon-plus"></span> New User
                           </button>
                       </div>
                   </th>
               </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.User_Employee_ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User_Roles.User_Role_Type)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User_F_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User_L_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User_Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User_Mob_Number)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User_Registration_Date)
    </td>
    <td style="width:150px;">
        <div class="row">
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "UserRegistration", new { id = item.User_Employee_ID })'">
                <span class="glyphicon glyphicon-pencil"></span>
            </button>

            <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Details", "UserRegistration", new { id = item.User_Employee_ID })'">
                <span class="glyphicon glyphicon-eye-open"></span>
            </button>

            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "UserRegistration", new { id = item.User_Employee_ID })'">
                <span class="glyphicon glyphicon-remove"></span>
            </button>
        </div>
    </td>
</tr>
    }
</table>
