@using ReportViewerForMvc;
@model BiscuitQualityAssuaranceSystem.Models.Category

@{
    ViewBag.Title = "ReportQualityParameter";
}
@using (Html.BeginForm("ReportQualityParameter", "Quality_Parameter", FormMethod.Post))
{
    <p>
        <div class="form-group">
            @Html.LabelFor(model => model.cat_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cat_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cat_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Generate Report" class="btn btn-warning" />
        </div>
    </p>
}
<div class="row" style="margin-top:100px">
    @if (ViewBag.ReportViewer != null)
    {
        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
    }
</div>