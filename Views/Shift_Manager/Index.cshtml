@model IEnumerable<BiscuitQualityAssuaranceSystem.Models.Shift_Manager>

@{
    ViewBag.Title = "Index";
}


<table class="table table-hover">
    <tr><br /><br />
        <h2>Shift Manager Home</h2>
    </tr><br /><br />
               <tr>
                   <th>
                       @Html.DisplayNameFor(model => model.SM_id)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.SM_F_name)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.SM_L_name)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.Tel_no)
                   </th>
                   <th>
                       @Html.DisplayNameFor(model => model.SM_User_Name)
                   </th>
                   <th>
                       <div class="row">
                           <button type="button" class="btn btn-info btn-lg" onclick="location.href='@Url.Action("Create", "Shift_Manager")'">
                               <span class="glyphicon glyphicon-plus"></span> New Shift Manager
                           </button>
                       </div>
                   </th>
               </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.SM_id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SM_F_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SM_L_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tel_no)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SM_User_Name)
    </td>
    <td style="width:150px;">
        <div class="row">
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Shift_Manager", new { id = item.SM_id })'">
                <span class="glyphicon glyphicon-pencil"></span>
            </button>

            <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Details", "Shift_Manager", new { id = item.SM_id })'">
                <span class="glyphicon glyphicon-eye-open"></span>
            </button>

            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Shift_Manager", new { id = item.SM_id })'">
                <span class="glyphicon glyphicon-remove"></span>
            </button>
        </div>
    </td>
</tr>
    }

</table>
