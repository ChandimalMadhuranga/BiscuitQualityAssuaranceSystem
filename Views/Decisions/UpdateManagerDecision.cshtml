@model BiscuitQualityAssuaranceSystem.Models.Decision

@{
    ViewBag.Title = "UpdateManagerDecision";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <tr><br /><br />
              <h2>Update Manager Decision</h2>
    </tr><br /><br /> 
    <div class="row">
        <div class="col-lg-12 title-bar">
            <div class="col-lg-10">
                <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Decisions")'" style="margin-top: 3px;">
                    <span class="glyphicon glyphicon-arrow-left"></span>
                </button>
            </div>
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Des_Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Des_Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Des_Description, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Dec_Status, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.Dec_Status, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Dec_Status, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-warning" />
        </div>
    </div>
</div>
}

