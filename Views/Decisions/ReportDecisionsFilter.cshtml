@using ReportViewerForMvc;
@model BiscuitQualityAssuaranceSystem.Models.Decision


@{
    ViewBag.Title = "ReportDecisions";
}


@using (Html.BeginForm("ReportDecisions", "Decisions", FormMethod.Post))
{
<div>
    <br /><br />
    <h4>Product Decisions Report</h4>

    <p>
        <div class="form-group">
            @Html.LabelFor(model => model.Dec_date, "Select Month", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dec_date, "MMMM", new { htmlAttributes = new { @class = "form-control datetimepicker" } })
                @Html.ValidationMessageFor(model => model.Dec_date, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Generate Report" class="btn btn-warning" />
        </div>
    </p>
</div>
}

<div class="row" style="margin-top:100px">
    @if (ViewBag.ReportViewer != null)
    {
        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
    }
</div>

