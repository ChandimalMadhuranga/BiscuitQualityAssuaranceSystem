@model BiscuitQualityAssuaranceSystem.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>Biscuit Quality Assuarance System</h1>
</div>
<h2>Login</h2>

<div class="card-body">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(model => model.User_Name)
            @Html.TextBoxFor(model => model.User_Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.User_Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.User_Password)
            @Html.PasswordFor(model => model.User_Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.User_Password)
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <button type="submit" class="btn btn-warning float-right rounded-0">Login</button>
        <div>
            @Html.ActionLink("Register", "Register")            
        </div>
    }
</div>
