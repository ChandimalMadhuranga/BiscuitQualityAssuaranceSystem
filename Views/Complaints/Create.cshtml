    <hr />  <br /><br />
    <div class="row">
        <div class="col-lg-12 title-bar">
            <div class="col-lg-10">
                <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Complaints")'" style="margin-top: 3px;">
                    <span class="glyphicon glyphicon-arrow-left"></span>
                </button>
            </div>
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    @Html.LabelFor(model => model.Com_ID, htmlAttributes: new { @class = "control-label col-md-2" })
