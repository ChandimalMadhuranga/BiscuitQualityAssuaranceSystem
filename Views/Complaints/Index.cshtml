@model IEnumerable<BiscuitQualityAssuaranceSystem.Models.Complaint>

@{
    ViewBag.Title = "Index";
}


<p>

    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Shift Manager"))
        {
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ManagerTasks", "Complaints")'">
                <span class="glyphicon glyphicon-tasks"></span> My Tasks
            </button>
        }
    }
</p>

<table class="table table-hover">
    <tr><br /><br />
        <h2>Home</h2>
        <h4>Complaints</h4>
    </tr><br /><br />
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Com_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Product_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quality_Checker.Qc_F_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shift_Manager.SM_F_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Com_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Com_Status)
        </th>
        <th>
            <div class="row">
                <button type="button" class="btn btn-info btn-lg" onclick="location.href='@Url.Action("Create", "Complaints")'">
                    <span class="glyphicon glyphicon-plus"></span> New Complaint
                </button>
            </div>
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Com_ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Product.Product_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quality_Checker.Qc_F_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Shift_Manager.SM_F_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Com_Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Com_Status)
    </td>
    <td style="width:150px;">
        <div class="row">
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Complaints", new { id = item.Com_ID })'">
                <span class="glyphicon glyphicon-pencil"></span>
            </button>

            <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Details", "Complaints", new { id = item.Com_ID })'">
                <span class="glyphicon glyphicon-eye-open"></span>
            </button>

            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Complaints", new { id = item.Com_ID })'">
                <span class="glyphicon glyphicon-remove"></span>
            </button>
        </div>
    </td>
</tr>
    }

</table>
